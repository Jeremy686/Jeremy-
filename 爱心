#include <stdio.h>
#include <stdlib.h>
int main(int argc,char*argv[])
{
    float x,y,a;
    for(y=1.5;y>-1.5;y-=0.1)
    {
        for(x=-1.5;x<1.5;x+=0.04)
        {
            a=x*x+y*y-1;
            putchar(a*a*a-x*x*y*y*y<=0.0?'*':' ');
        }
        system("color 0c");
        putchar('\n');
    }
    printf("        To Jinwei Yin:\n\n");
    printf("        Happy Birthday!!!\n\n");
    printf("        Embrace every moment! Hope your day is as special as you!\n\n");
    printf("        Stay positive and keep shining!\n\n");

    printf("                                               From Xiankun Ding     \n\n");
    printf("                                                       2025/7/18     \n");
    return 0;
}
